{
	"name": "batch-runner",
	"displayName": "Batch Runner",
	"description": "Execute batch file in the vscode terminal",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.64.0"
	},
	"icon": "media/icon.png",
	"qna": "marketplace",
	"license": "SEE LICENSE IN LICENSE",
	"keywords": [
		"batch",
		".bat",
		"execute",
		"run",
		"menu",
		"terminal"
	],
	"categories": [
		"Other",
		"Debuggers"
	],
	"activationEvents": [
		"onCommand:batch-utils.execBatchFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "batch-utils.execBatchFile",
				"category": "Batch Runner",
				"title": "Run Batch File in Terminal",
				"shortTitle": "Run .bat File",
				"icon": "$(play)",
				"enablement": "resourceLangId == bat && !isInDiffEditor && !virtualWorkspace && shellExecutionSupported"
			}
		],
		"keybindings": [
			{
				"command": "batch-utils.execBatchFile",
				"key": "F5",
				"enablement": "resourceLangId == bat && !isInDiffEditor && !virtualWorkspace && shellExecutionSupported && !inDebugMode"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "batch-utils.execBatchFile",
					"group": "batch"
				}
			],
			"editor/title/run": [
				{
					"command": "batch-utils.execBatchFile",
					"group": "batch"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.4.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nils-soderman/vscode-batch-runner"
	}
}
